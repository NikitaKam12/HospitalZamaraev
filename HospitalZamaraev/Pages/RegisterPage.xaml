<Page x:Class="HospitalZamaraev.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HospitalZamaraev.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="350">
            <TextBlock Text="Регистрация клиента" TextAlignment="Center" FontSize="18" Margin="0,0,0,20"/>

            <TextBlock Text="Введите имя пользователя:"/>
            <TextBox x:Name="Username_Box" Margin="0,0,0,10"/>

            <TextBlock Text="Введите логин:"/>
            <TextBox x:Name="Login_Box" Margin="0,0,0,10"/>

            <TextBlock Text="Введите пароль:"/>
            <PasswordBox x:Name="Password_Box" Margin="0,0,0,20"/>

            <Button Content="Зарегистрироваться" Click="Register_Click"/>
            <Button Content="Назад" Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Page>
