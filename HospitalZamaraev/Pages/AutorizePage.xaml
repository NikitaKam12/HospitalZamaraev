<Page x:Class="HospitalZamaraev.Pages.AutorizePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HospitalZamaraev.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="350">
            <TextBlock Text="Авторизация" FontSize="18" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Введите логин:"/>
            <TextBox x:Name="Login_Box" Margin="0,0,0,10"/>

            <TextBlock Text="Введите пароль:"/>
            <PasswordBox x:Name="Psswrd_box" Margin="0,0,0,20"/>

            <Button Content="Авторизоваться" Click="Autorize_Click" Margin="0,0,0,10"/>
            <Button Content="Зарегистрироваться" Click="Register_Click"/>
        </StackPanel>
    </Grid>
</Page>
